@model TicketVerkoop.ViewModels.TeamWithMatchesVM

@{
    ViewData["Title"] = "Matches";
}

<h1>Wedstrijden @Model.TeamName</h1>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <a asp-controller="Subscription"
               asp-action="Index"
               asp-route-team="@Model.TeamName"
               class="btn btn-primary">Jaarabonnement kopen</a>
        </div>
    </div>
</div>


@if (Model.MatchVMs != null)
{
    <div>
        <ul id="matches">
            @foreach (var item in Model.MatchVMs)
            {
                @await Html.PartialAsync("DisplayTemplates/_MatchView", item)

            }
        </ul>
    </div>
}